#!/bin/bash

SCRIPT_PATH="$(dirname "$(readlink -f "$0")")"

# Usage: ./mpvcomp main.mp4 extra1.mp4 extra2.mp4 ...
if [ $# -lt 1 ]; then
    echo "Usage: $0 main.mp4 [more.mp4 ...]"
    exit 1
fi

main="$1"
shift

externals=()
lavfi=""
idx=2

videos=("$main" "$@")
n=${#videos[@]}

lines=("Loaded $n videos")
for v in "${videos[@]}"; do lines+=("$v"); done

big_font="h/14"
small_font="h/32"
spacing=1.05

fonts=()
for i in "${!lines[@]}"; do
    if [[ $i -eq 0 ]]; then
        fonts+=("$big_font")
    else
        fonts+=("$small_font")
    fi
done

for f in "$@"; do
    externals+=(--external-file="$f")
    lavfi+="[vid$idx]nullsink;"
    ((idx++))
done

height_expr="0"
for s in "${fonts[@]}"; do
    height_expr+=" + ($s * $spacing)"
done

draws=""
offset="0"
for i in "${!lines[@]}"; do
    t="${lines[i]}"
    s="${fonts[i]}"
    draws+="drawtext=font=Arial:text='$t':fontsize=$s:"
    draws+="fontcolor=white@0.8:bordercolor=black@0.5:borderw=2:"
    draws+="x=(w-text_w)/2:y=(h-($height_expr))/2+$offset,"
    offset+=" + ($s * $spacing)"
done

hotkeys="X: Menu  P: Pixel O: Overlay"
# escape ':' for ffmpeg drawtext option parsing
hotkeys_esc="${hotkeys//:/\\:}"
draws+="drawtext=font=Arial:text='$hotkeys_esc':fontsize=$small_font:fontcolor=white@0.9:bordercolor=black@0.6:borderw=2:box=1:boxcolor=black@0.35:boxborderw=8:x=(w-text_w)/2:y=h-($small_font*1.2),"

draws="${draws%,}"
lavfi+="[vid1]$draws[vo]"

mpv "$main" "${externals[@]}" --lavfi-complex="$lavfi" --loop --script="${SCRIPT_PATH}/video_comparison_tool.lua"
